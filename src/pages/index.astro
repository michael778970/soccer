---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="bugdill socer" description={SITE_DESCRIPTION} />
		<style>
			.scoreboard {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 2rem;
				font-size: 2rem;
				font-weight: bold;
				margin: 2rem 0;
			}
			.team {
				padding: 1rem 2rem;
				border: 2px solid #333;
				border-radius: 12px;
				text-align: center;
			}
			.title {
				text-align: center;
				font-size: 3rem;
				font-weight: bold;
				margin-top: 2rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1 class="title">⚽ bugdill socer ⚽</h1>

			<div class="scoreboard">
				<div class="team">
					<div>Team Red</div>
					<div>Score: 0</div>
				</div>
				<div class="team">
					<div>Team Blue</div>
					<div>Score: 0</div>
				</div>
			</div>

			<p style="text-align:center;">
				Welcome to the official Bugdill Socer scoreboard.  
				Customize team names and scores in <code>src/pages/index.astro</code>.
			</p>
		</main>
		<Footer />
	</body>
</html>
